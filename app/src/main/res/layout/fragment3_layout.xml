<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bricks">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="@string/our_team"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
            app:srcCompat="@drawable/tanya" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Tanya Sah"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:width="100dp"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:maxLength="100000"
            android:text="@string/it_specialist_with_7_years_of_professional_experience_in_information_security_and_digital_forensics_expert_with_a_wide_variety_of_security_engineering_networking_and_operating_system_software_possesses_an_associate_degree_in_information_security_and_digital_forensics"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="italic" />


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
            app:srcCompat="@drawable/shivam" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/shivam_mahajan"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:width="100dp"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:maxLength="100000"
            android:text="Driven software engineer with 6+ years of experience executing cutting-edge engineering solutions with a wide range of e-commerce application and technology skills. Able to leverage full-stack expertise to build interactive and user-centered website designs to scale. "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="italic" />


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
            app:srcCompat="@drawable/akansha" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="169dp"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/akansha_vijay"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:width="100dp"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:maxLength="100000"
            android:text="Project manager with 8+ years of experience managing multi-million dollar construction projects, coordinating a team of 90+ subcontractors, and performing budget allocation and analysis. Managed a project budget of $325M+ while reducing costs by 15% annually."
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="italic" />

    </LinearLayout>
</ScrollView>