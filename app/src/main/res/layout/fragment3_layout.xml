<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bricks">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="268dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="The Team"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
            app:srcCompat="@drawable/tanya" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Tanya Sah"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:width="100dp"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            android:maxLength="100000"
            android:text="A coding and technology enthusiast who is passionate about music. Always keen to learn new things. Dedicated and determined towards work. You might find her with her guitar in some corner of the room."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
            app:srcCompat="@drawable/shivam" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/shivam_mahajan"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:width="100dp"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            android:maxLength="100000"
            android:text="Upcoming B.Tech. graduate with strong interest in problem solving and analytics. Driven by new challenges. Enthusiastic to learn new technologies and methodologies along with a can-do attitude."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
            app:srcCompat="@drawable/akansha" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="169dp"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/akansha_vijay"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:width="100dp"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            android:maxLength="100000"
            android:text="An ambivert and organised individual with interest in problem solving aspect of technology. Sincere and result oriented on the work front. Enjoys a team-driven environment and receptive to new ideas."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />

    </LinearLayout>
</ScrollView>